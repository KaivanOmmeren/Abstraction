{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "module": "commonjs",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "declaration": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
  ]
}
